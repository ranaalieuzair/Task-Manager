<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<%= form_with(url: tasks_path, method: :get, local: true) do |f| %>
  <div class="form-group">
    <%= f.select :category, ['Work', 'Personal', 'Other'], prompt: 'Select Category' %>
  </div>
  <%= f.submit 'Filter', class: 'btn btn-primary' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Deadline</th>
      <th>Priority</th>
      <th>Completed</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.category %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.completed %></td>
        <td><%= task.user_id %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
